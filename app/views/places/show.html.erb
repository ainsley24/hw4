<% if @current_user %>
<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
@posts = Post.where({"user_id" => session["user_id"] })
<% for post in @posts %>

<div class="row">
 <div class="col-sm-1 col-md-3">

  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>

  <% if post.uploaded_image.attached? %>
  <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
<% else %>
  <img src="<%= post["image"] %>" class="img-fluid">
<% end %>

  </div>
</div>

<% end %>

<p>
  <a class="nav-link btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a class="nav-link btn btn-primary" href="/places">Back to All Places</a>
</p>
<% end %>