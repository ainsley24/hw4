<!DOCTYPE html>
<html>
  <head>
    <title>Homework</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

 <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- My own CSS -->
    <link rel="stylesheet" href="/stylesheets/application.css">

    <!-- Bootstrap JS -->
    
  </head>

    
 

  <body>
   

   <nav class="navbar bg-primary mb-3" data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Home</a>
        <span class="navbar-text">
  <% if @current_user %>
    <%= @current_user["username"] %>
    <a class="nav-link btn btn-primary mt-3 mb-3" href="/logout">Logout</a> |
  <% else %>
    <a class="nav-link btn btn-primary mt-3 mb-3" href="/login">Login</a> |
    <a class="nav-link btn btn-primary mt-3 mb-3" href="/users/new">Signup</a>
  <% end %>
  </span>
  </div>
</nav>

<div class="container mt-3">
    <div class="row mt-5">
      <div class="col text-center">
        <%= flash["notice"] %>
      </div>
    </div>

    <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
